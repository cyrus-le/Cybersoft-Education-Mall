<div class="mt-4">
    <h3>Edit the course</h3>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Name of course</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name"
                placeholder="Enter the name">
        </div>
        <div class="form-group">
            <label for="name">Description of course</label>
            <textarea type="text" class="form-control" placeholder="Enter the description" id="description"
                name="description" id="" cols="10" rows="5">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video of course</label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId"
                placeholder="Enter the videoId">
        </div>
        <div class="form-group">
            <label for="level">Level of course</label>
            <input type="text" class="form-control" value="{{course.level}}" id="level" name="level"
                placeholder="Enter the level of course">
        </div>


        <button type="submit" class="btn btn-warning px-4">Edit</button>
    </form>
</div>