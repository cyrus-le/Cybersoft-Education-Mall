<div class="mt-4">
    <h3>Create a new course</h3>
    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Name of course</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter the name">
        </div>
        <div class="form-group">
            <label for="name">Description of course</label>
            <input type="text" class="form-control" id="description" name="description"
                placeholder="Enter the description">
        </div>
        <div class="form-group">
            <label for="videoId">Video of course</label>
            <input type="text" class="form-control" id="videoId" name="videoId" placeholder="Enter the videoId">
        </div>
        <div class="form-group">
            <label for="level">Level of course</label>
            <input type="text" class="form-control" id="level" name="level" placeholder="Enter the level of course">
        </div>


        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>